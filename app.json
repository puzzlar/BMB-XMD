{
  "name": "Skipper-Bot",
  "description": "WhatsApp Bot powered by Baileys and deployed on Railway",
  "stack": "nodejs-18",
  "env": {
    "SESSION_ID": {
      "description": "Your WhatsApp Session ID (must be generated first)",
      "required": true
    },
    "OWNER_NAME": {
      "description": "Bot Owner's Name",
      "required": true,
      "value": "PUZZLAR_SKIPPER"
    },
    "NUMERO_OWNER": {
      "description": "Bot Owner's Number",
      "required": true,
      "value": "254718850915"
    },
    "PREFIX": {
      "description": "Command prefix",
      "value": "."
    },
    "BOT_NAME": {
      "description": "Name of the bot",
      "value": "SKIPPER"
    },
    "IMAGE_MENU": {
      "description": "Menu image URL",
      "value": "https://files.catbox.moe/8qq3l4.jpg"
    },
    "CHAT_BOT": {
      "description": "Enable chatbot (yes/no)",
      "value": "yes"
    },
    "AUTO_BIO": {
      "description": "Enable auto bio (yes/no)",
      "value": "yes"
    },
    "PUBLIC_MODE": {
      "description": "Bot public mode (yes/no)",
      "value": "yes"
    },
    "AUDIO_REPLY": {
      "description": "Enable audio replies (yes/no)",
      "value": "yes"
    },
    "AUTO_READ_STATUS": {
      "description": "Enable auto read of statuses (yes/no)",
      "value": "yes"
    },
    "AUTO_DOWNLOAD_STATUS": {
      "description": "Enable auto download of statuses (yes/no)",
      "value": "no"
    },
    "STARTING_BOT_MESSAGE": {
      "description": "Send starting bot message (yes/no)",
      "value": "yes"
    },
    "ANTI_DELETE_MESSAGE": {
      "description": "Enable anti-delete message (yes/no)",
      "value": "yes"
    },
    "PM_PERMIT": {
      "description": "Enable PM permit (yes/no)",
      "value": "yes"
    },
    "ANTICALL": {
      "description": "Block calls (yes/no)",
      "value": "yes"
    },
    "AUTO_REACT": {
      "description": "Enable auto reaction (yes/no)",
      "value": "no"
    },
    "AUTO_REACT_STATUS": {
      "description": "Enable auto reaction to statuses (yes/no)",
      "value": "no"
    },
    "AUTO_READ": {
      "description": "Enable auto reading messages (yes/no)",
      "value": "yes"
    },
    "WARN_COUNT": {
      "description": "Warn count before action",
      "value": "3"
    },
    "OPENAI_API_KEY": {
      "description": "Optional: OpenAI API key for AI features",
      "required": false
    },
    "DATABASE_URL": {
      "description": "Railway auto injects this for PostgreSQL",
      "required": false
    }
  },
  "scripts": {
    "start": "node index.js"
  }
}